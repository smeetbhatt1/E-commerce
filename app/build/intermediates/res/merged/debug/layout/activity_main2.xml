<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/backgroundcolor"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.smeet.productfinal.Main2Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Product Name:"
        android:textSize="18dp"
        tools:layout_editor_absoluteX="16dp"
        tools:layout_editor_absoluteY="7dp"
        android:layout_alignBaseline="@+id/editTextProduct"
        android:layout_alignBottom="@+id/editTextProduct"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/editTextProduct"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Product Name"
        tools:layout_editor_absoluteY="34dp"
        tools:layout_editor_absoluteX="16dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textView"
        android:layout_marginStart="19dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/editTextCompany"
        android:layout_alignBottom="@+id/editTextCompany"
        android:layout_alignParentStart="true"
        android:text="Company:"
        android:textSize="18dp" />

    <EditText
        android:id="@+id/editTextCompany"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextProduct"
        android:layout_below="@+id/editTextProduct"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Enter Company Name" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/textView3"
        android:layout_below="@+id/editTextCompany"
        android:layout_marginTop="75dp"
        android:textSize="18dp"
        android:text="Complaint: " />

    <EditText
        android:id="@+id/editTextComplaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/editTextCompany"
        android:layout_below="@+id/editTextCompany"
        android:layout_marginTop="62dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:minLines="6"
        android:maxLines="6"
        android:hint="Complaint" />

    <Button
        android:id="@+id/buttonComplaint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="21dp"
        android:text="Submit Complaint"
        android:background="@drawable/backgroundcolor1"
        />
</RelativeLayout>
