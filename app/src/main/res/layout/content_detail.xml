<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundcolor"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.smeet.productfinal.DetailActivity"
    tools:showIn="@layout/activity_detail">


    <ImageView
        android:id="@+id/ivImage"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="2dp"
        app:srcCompat="@drawable/sample" />

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/ivImage"
        android:textStyle="italic"
        android:textSize="19dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvPrice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:textSize="19dp"
        android:textStyle="bold"
        android:layout_below="@+id/ivImage"
        android:text="TextView" />

    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="wrap_content"
        android:textSize="19dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/tvName"
        android:layout_marginTop="14dp"
        android:text="TextView" />

    <Button
        android:id="@+id/btBuyNow"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="7dp"
        android:layout_marginStart="7dp"
        android:background="@drawable/backgroundcolor1"
        android:text="Buy Now" />

    <Button
        android:id="@+id/btAddToCart"
        android:layout_width="140dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btBuyNow"
        android:layout_alignParentEnd="true"

        android:background="@drawable/backgroundcolor1"
        android:layout_marginEnd="7dp"
        android:text="Add To Cart" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:textSize="19dp"
        android:text=""
        android:layout_below="@+id/tvDescription"
        android:layout_alignStart="@+id/btBuyNow" />


</RelativeLayout>



